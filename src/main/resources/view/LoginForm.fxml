<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="20"
      style="-fx-background-color: derive(#202a44, 20%); -fx-border-color: #c0c0c0; -fx-border-width: 1;
      -fx-border-radius: 6; -fx-background-radius: 6;">
    <padding>
        <Insets top="20" right="40" bottom="20" left="40" />
    </padding>

    <Label text="Login" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #f5f5f5;" />

    <VBox spacing="10">
        <TextField fx:id="usernameField" promptText="Username" maxWidth="200"
                   style="-fx-prompt-text-fill: derive(#333, 50%); -fx-font-size: 14px; -fx-max-width: 200px;" />
        <PasswordField fx:id="passwordField" promptText="Password" maxWidth="200"
                       style="-fx-prompt-text-fill: derive(#333, 50%); -fx-font-size: 14px; -fx-max-width: 200px;" />
    </VBox>

    <Button text="Login" onAction="#handleLogin" maxWidth="200"
            style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-background-radius: 5;" />
</VBox>
